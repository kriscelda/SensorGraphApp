<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorGraphApp.DataInputPage"
             Title="Data Input">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Enter Sensor Value:" FontSize="18" />

        <Entry x:Name="SensorEntry" Placeholder="Enter a number" Keyboard="Numeric" />

        <Button Text="Submit" Clicked="OnSubmitClicked" />

        <Label x:Name="ResultLabel" TextColor="Green" FontAttributes="Bold" />
    </VerticalStackLayout>
</ContentPage>
