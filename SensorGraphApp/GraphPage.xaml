<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorGraphApp.GraphPage"
             Title="Graph Page">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Sensor Data Graph (Simulated)" FontSize="22" />

        <BoxView HeightRequest="200" WidthRequest="40"
                 Color="RoyalBlue"
                 HorizontalOptions="Center"
                 VerticalOptions="End" />

        <Label Text="Example: Data = 80%" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
